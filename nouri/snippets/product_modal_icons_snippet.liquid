            {% if product.metafields.global.icon_01 %}
            <div class="single__icon icon--{{ block.id }}" id="modalclick--{{ product.metafields.global.icon_01_title }}">

                <!-- initial icon -->
                <div class="icon">
                    <img src="{{ product.metafields.global.icon_01 }}" class="icon__image" />
                    <!-- initial icon text -->
                    <div class="icon__text">
                        {{ product.metafields.global.icon_01_title }}
                    </div>
                </div>
                {% if settings.section.show_modal %}
                <!-- modal content -->
                <div id="modalicon--{{ product.metafields.global.icon_01_title }}" class="modal">
                    <div class="modal-content ">
                        <a class="close close--{{ block.id }}">&times;</a>
                        <div class="icon-model">

                            <div class="icon-model-img medium-up--one-quarter grid__item">
                                    <img src="{{ product.metafields.global.icon_01 }}" class="icon_model__image lazyload" />
                            </div>
                            <div class="icon-model-content medium-up--six-eighths grid__item">
                                <p>
                                    {% if product.metafields.global.icon_01_text != blank %}
                                        {{ product.metafields.global.icon_01_text }}
                                    {% endif %}
                                </p>
                                <div class="conditions">
