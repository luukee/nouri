{% schema %}
  {
    "name": "Variations",
    "max_blocks": 3,
    "settings": [
      {
        "type": "image_picker",
        "id": "image_background",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "call_to_actioin",
        "label": "Call to action"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "subtitle content"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
      	"default": "<p>Unlike other omega oils, Ahiflower is plant-based omega blend and contains GLA, an omega 6 associated with skin health, hormonal balance and reducing inflammation.</p>"
      },
      {
        "type": "richtext",
        "id": "subtext",
        "label": "subtext",
        "default": "<p>Free shipping</p>"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      },
      {
        "type": "text",
        "id": "button_link",
        "label": "Button Link"
      },
      {
        "type": "textarea",
        "id": "donation",
        "label": "Bottom Donation",
        "default": "Interested in supporting Nouri with another amount?"
      },
      {
        "type": "html",
        "id": "donation_embed",
        "label": "Embed Code",
        "default": "<form></form>"
      }
    ],
    "blocks" : [
      {
        "type": "default",
        "name": "Variant",
        "settings": [
          {
            "type": "text",
            "id": "bottle_name",
            "label": "Bottle Name"
          },
          {
            "type": "text",
            "id": "number_bottles",
            "label": "Number of bottles"
          },
          {
            "type": "text",
            "id": "price_amount",
            "label": "Price"
          },
          {
            "type": "text",
            "id": "save_amount",
            "label": "Amount Saved"
          },
          {
            "type": "text",
            "id": "price_per_day",
            "label": "Price per day"
          },
          {
            "type": "text",
            "id": "variation_id",
            "label": "Variation ID"
          },
          {
            "type": "textarea",
            "id": "recurring_text",
            "label": "Notes"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Variations",
        "category": "Variations"
      }
    ]
  }
{% endschema %}
