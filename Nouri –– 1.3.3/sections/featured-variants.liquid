<style>
  #AddToCartForm--product-template { display:none;}
  .bold-ro__prepaid-container {color:#000;}
  .featured-variants-section {
    background: url({{ section.settings.image_background | img_url: 'master' }});
    background-size: cover;
    background-position: center 25%;
    background-repeat: no-repeat;
    margin-bottom: 5rem;
  }
</style>
<!-- /templates/product.liquid -->

{% capture image_layout %}

<div class="section-content text-left feat-image-with-text">

  {% if section.settings.call_to_actioin != blank %}

    <h2 class="call-to-action">
      {{ section.settings.call_to_actioin}}
    </h2>

  {% endif %}


  {% if section.settings.title != blank %}

    <h1 class="title">
      {{ section.settings.title}}
    </h1>

  {% endif %}


  {% if section.settings.subtitle != blank %}

    <h3 class="subtitle">
      {{ section.settings.subtitle}}
    </h3>

  {% endif %}


  {% if section.settings.text != blank %}
    {{ section.settings.text}}
  {% endif %}


  {% if section.settings.subtext != blank %}

    <div class="subtext white">
      {{ section.settings.subtext}}
    </div>

  {% endif %}


  {% if section.settings.button_text != blank %}

    <a href="{{ section.settings.button_link }}" class="btn">
      {{ section.settings.button_text }}
    </a>

  {% endif %}

</div>
{% endcapture %}

<div class="section-wrapper featured-variants-section" id="featured-variants-section" data-section-id="{{ section.id }}" data-section-type="bg-img-section">
  <div class="shopify-section bg-img-section bg-img-section-{{ section.id }}">
    <div class="wrapper">
      <div class="grid page-width variant-header">

        <div class="grid__item large--one-third push--large--two-thirds medium--one-half push--medium--one-half">

          {{ image_layout }}

          </div>



      </div>

      <div class="grid variants" id="products">

        {% if section.blocks.size > 0 %}
        <!-- product starter -->
        {% for block in section.blocks %}
        <div class="grid__item large--one-third medium--one-whole text-center variant--{{ block.id }}">

          {% if block.settings.bottle_name %}
          <span class="bottle-title">{{ block.settings.bottle_name }}</span>
          {% endif %}

          {% if block.settings.number_bottles != empty %}
          <span class="save-amount">{{ block.settings.number_bottles | escape  }}</span>
          {% endif %}

          {% if block.settings.price_amount != empty %}
          <span class="price-amount">{{ block.settings.price_amount | escape  }}</span>
          {% endif %}

          {% if block.settings.save_amount != empty %}
          <span class="save-amount">{{ block.settings.save_amount | escape  }}</span>
          {% endif %}

          {% if block.settings.variation_id != empty %}

          <form action="/cart/add" data-productid="{{ block.settings.variation_id }}" method="post" enctype="multipart/form-data">

              <select name="id" data-productid="{{ block.settings.variation_id }}" class="hide">

                          <option value="{{ block.settings.variation_id }}"> {{ variant.title }} for {{ variant.price | money_with_currency }}</option>

              </select>

              <input type="submit" value="Add to cart" class="btn pre-order-btn button-on-click-sub" />

          </form>

          {% endif %}

          {% if block.settings.price_per_day != empty %}
          <span class="price-amount-per-day">{{ block.settings.price_per_day | escape  }}</span>
          {% endif %}

          {% if block.settings.recurring_text != empty %}
          <span class="recurring-text">{{ block.settings.recurring_text | escape  }}</span>
          {% endif %}

          {% if section.blocks > 1 and section.blocks < 3 %}
          <h1>this please</h1>
          {% endif %}

        </div>
        {% endfor %}

        {% endif %}


        <!-- product support us -->
        {% if section.settings.donation != blank %}
        <div class="grid__item large--one-whole medium--one-whole text-center">

            <button class="learn-more-btn" id="learn-more-btn">learn more</button>
            {% include 'button-modal' %}

            <div class="pre-order-other-section">
              {{ section.settings.donation}}
            </div>
          <a class="pre-order-btn button-on-click-paypal btn">enter amount</a>
          <div class="nouri-donate-button">
              {{ section.settings.donation_embed}}
          </div>

          <script>

            $(document).ready(function(){
              $(".pre-order-btn.button-on-click-paypal").click(function(){
                  $('.nouri-donate-button input[type="image"]').trigger('click');
              });
              $('#zoom_01').elevateZoom({
                zoomType : "lens",
                lensShape : "square",
                lensSize : 200
              });
            });

          </script>

        </div>
        {% endif %}

      </div>

    </div>
  </div>
</div>










