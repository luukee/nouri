<div class="wrapper">
  <div class="page-width feature-row">
    {% capture image_layout %}
      <div class="feature-row__item">
        {% if section.settings.image != blank %}
          <noscript>
            {{ section.settings.image | img_url: '600x600' | img_tag: section.settings.image.alt, 'feature-row__image-no-js' }}
          </noscript>
          <div class="feature-row__image-wrapper">
            {% assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
            <div class="grid">

              <div class="grid__item large--ten-twelfths">

                <img class="feature-row__image lazyload"
                  src="{{ section.settings.image | img_url: 'master' }}"
                  data-src="{{ img_url }}"
                  data-widths="[360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                  data-aspectratio="{{ section.settings.image.aspect_ratio }}"
                  data-sizes="auto"
                  alt="{{ section.settings.image.alt | escape }}">

                  <div class="page-width feature-row feature-button-row">
                    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
                      <a href="{{ section.settings.button_link }}" class="btn">
                        {{ section.settings.button_label | escape }}
                    </a>
                    {% endif %}
                  </div>

              </div>

            </div>

        </div>
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}

      </div>
    {% endcapture %}

    <div class="feature-row feature-text-row">

      <div class="large--hide feature-row__pretitle-mobile">
        {% if section.settings.pretitle != blank %}
          <p>{{ section.settings.pretitle | escape }}</p>
        {% endif %}
      </div>
      <div class="large--hide feature-row__title-mobile">
        {% if section.settings.title != blank %}
          <p>{{ section.settings.title | escape }}</p>
        {% endif %}
      </div>

      {% if section.settings.layout == 'left' %}
        {{ image_layout }}
      {% endif %}

      <div class="medium-down--hide feature-row__item feature-row__text--{{ section.settings.layout }}">
        <div class="grid">
          <div class="grid__item large--seven-twelfths push--large--three-twelfths">


                    {% if section.settings.pretitle != blank %}
                      <p class="feature-row__pretitle">
                        {{ section.settings.pretitle | escape }}
                      </p>
                    {% endif %}

                    <div class="feature-content">

                        {% if section.settings.title != blank %}
                          <p class="feature-row__title">
                            {{ section.settings.title | escape }}
                          </p>
                        {% endif %}

                      <div class="feature-row__text">
                        {% if section.settings.text != blank %}
                          {{ section.settings.text }}
                        {% endif %}
                      </div>

                    </div> <!-- end feature-content -->


          </div>
        </div>
      </div>

      {% if section.settings.layout == 'right' %}
        {{ image_layout }}
      {% endif %}

      <div class="large--hide feature-row__text-mobile">
        {% if section.settings.text != blank %}
          {{ section.settings.text }}
        {% endif %}
      </div>
    </div>
  </div>

</div>

{% schema %}
  {
    "name": "Image with text",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Image alignment",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "text",
        "id": "pretitle",
        "label": "Pre Heading",
        "default": "WHY PROBIOTICS?"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Image with text"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "Image with text",
        "category": "Image"
      }
    ]
  }
{% endschema %}
