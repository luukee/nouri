<div class="grid-uniform">
  <div class="grid__item large--whole about-page">
    <div class="grid-uniform">
      <div class="grid__item medium--one-whole large--four-fifths push--large--one-tenth">


              <!-- <iframe id="ytplayer" type="text/html" width="640" height="360"
              src="{{ section.settings.video_embed }}"
              frameborder="0"></iframe> -->

            <style>.codegena{position:relative;width:100%;height:0;padding-bottom:56.27198%;}.codegena iframe{position:absolute;top:0;left:0;width:100%;height:100%;}</style>
