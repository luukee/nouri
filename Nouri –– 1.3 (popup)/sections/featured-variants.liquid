<style>
  #AddToCartForm--product-template { display:none;}
  .bold-ro__prepaid-container {color:#000;}
</style>
<!-- /templates/product.liquid -->

<div data-section-id="{{ section.id }}" class="featured-variants-section" id="featured-variants-section">
  <div class="wrapper">

    <div class="grid variant-header">

      <div class="grid__item  medium--one-third push--medium--two-thirds large--two-eighths  push--large--six-eighths">

        {% if section.settings.call_to_actioin != blank %}
          <div class="call-to-action">
            <h1>{{ section.settings.call_to_actioin}}</h1>
          </div>
        {% endif %}

        {% if section.settings.title != blank %}
          <div class="pre-order-title">
            <p>{{ section.settings.title}}</p>
          </div>
        {% endif %}

        {% if section.settings.subtitle != blank %}
          <div class="pre-order-subtitle">
            <p>{{ section.settings.subtitle}}</p>
          </div>
        {% endif %}

        {% if section.settings.text != blank %}
        {{ section.settings.text}}
        {% endif %}

        {% if section.settings.guarantee != blank %}
        <div class="guarantee">
          {{ section.settings.guarantee}}
        </div>
        {% endif %}

      </div>

    </div>

    <div class="grid variants">

      {% if section.blocks.size > 0 %}
      <!-- product starter -->
      {% for block in section.blocks %}
      <div class="grid__item large--one-third medium--one-whole text-center variant--{{ block.id }}">

        {% if block.settings.bottle_name %}
        <span class="bottle-title">{{ block.settings.bottle_name }}</span>
        {% endif %}

        {% if block.settings.number_bottles != empty %}
        <span class="save-amount">{{ block.settings.number_bottles | escape  }}</span>
        {% endif %}

        {% if block.settings.price_amount != empty %}
        <span class="price-amount">{{ block.settings.price_amount | escape  }}</span>
        {% endif %}

        {% if block.settings.save_amount != empty %}
        <span class="save-amount">{{ block.settings.save_amount | escape  }}</span>
        {% endif %}

        {% if block.settings.variation_id != empty %}
        <a href="https://dailynouri.com/cart/add?id[]={{ block.settings.variation_id | escape  }}" class="pre-order-btn button-on-click-sub">choose</a>
        {% endif %}

        {% if block.settings.price_per_day != empty %}
        <span class="price-amount-per-day">{{ block.settings.price_per_day | escape  }}</span>
        {% endif %}

        {% if block.settings.recurring_text != empty %}
        <span class="recurring-text">{{ block.settings.recurring_text | escape  }}</span>
        {% endif %}

        {% if section.blocks > 1 and section.blocks < 3 %}
        <h1>this please</h1>
        {% endif %}

      </div>
      {% endfor %}

      {% endif %}


      <!-- product support us -->
      {% if section.settings.donation != blank %}
      <div class="grid__item large--one-whole medium--one-whole text-center">

          <button class="learn-more-btn" id="learn-more-btn">learn more</button>

          <div class="pre-order-other-section">
            {{ section.settings.donation}}
          </div>
        <a class="pre-order-btn button-on-click-paypal btn">enter amount</a>
        <div class="nouri-donate-button">
            {{ section.settings.donation_embed}}
        </div>

        <script>

          $(document).ready(function(){
            $(".pre-order-btn.button-on-click-paypal").click(function(){
              	$('.nouri-donate-button input[type="image"]').trigger('click');
            });
            $('#zoom_01').elevateZoom({
              zoomType : "lens",
              lensShape : "square",
              lensSize : 200
            });
          });

        </script>

      </div>
      {% endif %}

    </div>
  </div>

</div>

<!-- snippets/product-form.liquid -->
{% include 'product-form' %}
<!-- end products -->


{% schema %}
  {
    "name": "Variations",
    "max_blocks": 3,
    "settings": [
      {
        "type": "text",
        "id": "call_to_actioin",
        "label": "Call to action"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
      	"default": "<p>Unlike other omega oils, Ahiflower is plant-based omega blend and contains GLA, an omega 6 associated with skin health, hormonal balance and reducing inflammation.</p>"
      },
      {
        "type": "richtext",
        "id": "guarantee",
        "label": "Guarantee",
      "default": "<p>Free shipping</p>"
      },
      {
        "type": "textarea",
        "id": "donation",
        "label": "Bottom Donation",
        "default": "Interested in supporting Nouri with another amount?"
      },
      {
        "type": "html",
        "id": "donation_embed",
        "label": "Embed Code",
        "default": "<form></form>"
      }
    ],
    "blocks" : [
      {
        "type": "default",
        "name": "Variant",
        "settings": [
          {
            "type": "text",
            "id": "bottle_name",
            "label": "Bottle Name"
          },
          {
            "type": "text",
            "id": "number_bottles",
            "label": "Number of bottles"
          },
          {
            "type": "text",
            "id": "price_amount",
            "label": "Price"
          },
          {
            "type": "text",
            "id": "save_amount",
            "label": "Amount Saved"
          },
          {
            "type": "text",
            "id": "price_per_day",
            "label": "Price per day"
          },
          {
            "type": "text",
            "id": "variation_id",
            "label": "Variation ID"
          },
          {
            "type": "textarea",
            "id": "recurring_text",
            "label": "Notes"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Variations",
        "category": "Variations"
      }
    ]
  }
{% endschema %}
