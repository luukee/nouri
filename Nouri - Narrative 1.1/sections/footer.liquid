    {% endif %}

    <!-- secondary footer -->
    <div class="site-footer__bottom{% unless section.settings.show_social_icons or section.settings.show_payment_icons %} site-footer__bottom--center{% endunless %}">

        {% comment %}
            {% if section.settings.show_social_icons %}
            <div class="site-footer__social-icons flex-footer__item--one-third">
              {% include 'social-links', disableTab: true, largeIcons: false %}
            </div>
            {% endif %}
        {% endcomment %}

      <!-- copyright -->
      <div class="site-footer__copyright">

          <ul>
              <li>
                  <small>Privacy Policy</small>
              </li>
              <li>
                  <a href="/pages/terms-of-service"><small>Terms of Service</small></a>
              </li>
              <li>
                  <small> &copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: '/' }}, LLC. All rights reserved.</small>
              </li>
          </ul>

        <!-- <small class="site-footer__powered-by">{{ powered_by_link }}</small> -->
      </div>

      <!-- copyright -->
      <div class="site-footer__advise flex-footer__item--one-third">
          <div class="fda">
              <small>* These statements have not been evaluated by the Food and Drug Administration. This product is not intended to diagnose, treat, cure, or prevent any disease.</small>
          </div>
      </div>

      {% comment %}
      {%- if section.settings.show_payment_icons -%}
        <div class="site-footer__payment-icons flex-footer__item--one-third">
          {%- unless shop.enabled_payment_types == empty -%}
            <span class="visually-hidden">{{ 'general.payment.method' | t }}</span>
            <ul class="payment-icons list--inline">
              {%- for type in shop.enabled_payment_types -%}
                <li class="payment-icon">
                  {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                </li>
              {%- endfor -%}
            </ul>
          {%- endunless -%}
        </div>
      {%- endif -%}
      {% endcomment %}

